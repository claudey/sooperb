.posts-wrapper
  border 0px solid #0f0
  width 70%
  margin 0 auto
  @media screen and (max-width: 480px)
    width 100%

#noposts
  text-align center
  color #0088cc
  font-family "kepler-std", Georgia, Times, serif
  line-height 1.7em
  font-size 1.4em

.post
  border 0px solid #bbb
  padding-left 10%
  padding-right 10%
  padding-bottom 5em
  margin-bottom 2em
  text-align center
  border-bottom 4px solid #e7e7e7
  .header
    border 0px solid #eee
    .title
      font-family 'Quintessential', Serif
      font-size 3em
      line-height 1.5em
      margin-top 0
      margin-bottom 0.4em
      a:link, a:visited
        text-decoration none
        color #222
      a:hover, a:active
        color #005580
        text-decoration underline
    .meta
      font-family 'Georgia'
      font-size 1.3em
      font-style italic
      color #999
  .body
    text-align justify
    p
      font-family "kepler-std", Georgia, Times, serif
      line-height 1.7em
      font-size 1.4em
      color #444
      &.indent
        text-indent 3em
      &.sub-title
        font-size 2.1em
    .feature
      text-align center
      margin-top 3vw
      margin-bottom 4vw
    .feature-two
      .item
        margin-right 1em
    .feature-description
      text-indent 3em
      font-style italic
  @media screen and (max-width: 480px)
    padding-left 3%
    padding-right 3%

.post .body
  @media screen and (max-width: 480px)
    text-align left

.pager
  border-bottom 0px solid #ddd
  padding-bottom 0.6em
  div
    display inline-block
    border 0px solid #0f0
    width 49%
  .older
    text-align left
  .newer
    text-align right
  a
    font-family 'Georgia', serif
    font-size 1.6em
    font-weight bold

.explore-by-category
  text-align center
  border 0px solid #bbb
  padding-bottom 1.6em
  .header
    margin-top 1em
    text-transform uppercase
    font-family Georgia
    font-weight normal
    font-size 1.4em
    color #888
  .categories
    color #aaa
    a
      font-family 'Lato'
      font-size 1.5em
      margin-right 0.1em
      margin-left 0.1em
      color #006DA3

.quick-links
  border 0px solid #bbb
  .section
    border 0px solid #bbb
    .header
      font-family Georgia, serif
      font-size 1.4em
      font-weight normal
      padding-bottom 0.5em
      border-bottom 1px solid #ddd
    a
      font-family 'Georgia'
      font-size 1.4em
      display block
      padding-bottom 0.5em
      margin-bottom 0.5em
      border-bottom 1px dashed #ddd

.footer
  text-align center
  margin-top 3em
  margin-bottom 2em
  .wrapper
    border-top 1px solid #ddd
    padding-top 2em
    width 70%
    margin 0 auto
  p
    font-family 'Quicksand'
    margin 0
    font-size 1.4em
    line-height 1.6em
  img
    margin-bottom 1em
  p.copyright
    margin-top 1em

.footer .wrapper
  @media screen and (max-width: 480px)
    width 100%